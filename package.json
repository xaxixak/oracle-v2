{
  "name": "oracle-v2-mcp",
  "version": "0.5.0",
  "description": "Oracle v2 - MCP Memory Layer for querying Oracle philosophy",
  "type": "module",
  "main": "src/index.ts",
  "engines": {
    "bun": ">=1.2.0"
  },
  "scripts": {
    "dev": "bun src/index.ts",
    "server": "bun src/server.ts",
    "server:ensure": "bun src/ensure-server.ts",
    "server:status": "bun src/ensure-server.ts --status",
    "server:legacy": "bun src/server-legacy.ts",
    "serve": "bun dist/server.js",
    "index": "bun src/indexer.ts",
    "build": "tsc",
    "start": "bun dist/index.js",
    "test": "bun test",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "db:generate": "bunx drizzle-kit generate",
    "db:migrate": "bunx drizzle-kit migrate",
    "db:push": "bunx drizzle-kit push",
    "db:pull": "bunx drizzle-kit pull",
    "db:studio": "bunx drizzle-kit studio"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.31.0",
    "@modelcontextprotocol/sdk": "^0.5.0",
    "chromadb": "^3.2.0",
    "drizzle-orm": "^0.45.1",
    "hono": "^4.11.3"
  },
  "devDependencies": {
    "@playwright/test": "^1.57.0",
    "@types/node": "^20.17.9",
    "drizzle-kit": "^0.31.8",
    "typescript": "^5.7.2"
  },
  "keywords": [
    "oracle",
    "mcp",
    "memory",
    "knowledge-base",
    "semantic-search"
  ],
  "author": "Nat's Agents",
  "license": "MIT"
}
